{
  "name": "create-repl-app",
  "version": "0.1.0",
  "description": "Creates a new REPL application",
  "bin": {
    "create-repl-app": "./build/src/delete-after-create/create-repl-app.js"
  },
  "files": [
    "build/src"
  ],
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc && npm run add-js-extension",
    "dev": "tsc-watch --onSuccess \"npm run add-js-extension\"",
    "add-js-extension": "npx replace-in-file --configFile=replace-config.cjs --quiet",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "keywords": [
    "REPL"
  ],
  "author": "Impleta",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.11.2",
    "gts": "^3.1.1",
    "replace-in-file": "^6.3.5",
    "tsc-watch": "^6.0.0",
    "typescript": "~4.7.0"
  },
  "dependencies": {
    "find-up": "^6.3.0"
  }
}
