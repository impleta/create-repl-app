{
  "name": "{{app-name}}",
  "version": "0.1.0",
  "description": "{{app-name}} REPL application",
  "bin": {
    "{{app-name}}": "build/src/index.js"
  },
  "files": [
    "build/src"
  ],
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc && npm run add-js-extension",
    "dev": "tsc-watch --onSuccess \"npm run add-js-extension\"",
    "add-js-extension": "npx replace-in-file --configFile=replace-config.cjs --quiet",
    "fix": "gts fix",
    "prepare": "npm.cmd run compile",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint"
  },
  "keywords": [
    "REPL"
  ],
  "author": "",
  "license": "",
  "devDependencies": {
    "@types/node": "^14.11.2",
    "gts": "^3.1.1",
    "replace-in-file": "^6.3.5",
    "tsc-watch": "^6.0.0",
    "typescript": "~4.7.0"
  },
  "dependencies": {
    "find-up": "^6.3.0",
    "@impleta/repl-app": "^1.0.0"
  },
  "private": true
}